@using Kapitalist.Data.Models.Consts
@using Kapitalist.Web.Resources
@model Kapitalist.Web.Client.ViewModels.ContactViewModel

<div class="container header-and-body-content">
    <h2>@GlobalRes.Contact.</h2>

    @using (Html.BeginForm("Add", "UserContact", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})

        @Html.HiddenFor(m => m.TenderGuid)

        <div class="form-group">
            <label class="col-md-3 control-label">@GlobalRes.Name</label>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Name, null, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Name, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label">@GlobalRes.NameEn</label>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.NameEn, null, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.NameEn, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label">@GlobalRes.Language</label>
            <div class="col-md-9">
                @{
                    var languageList = new List<SelectListItem>
                    {
                        new SelectListItem {Text = AvailableLanguage.UK, Value = AvailableLanguage.UK, Selected = AvailableLanguage.UK == Model.Language},
                        new SelectListItem {Text = AvailableLanguage.EN, Value = AvailableLanguage.EN, Selected = AvailableLanguage.EN == Model.Language},
                        new SelectListItem {Text = AvailableLanguage.RU, Value = AvailableLanguage.RU, Selected = AvailableLanguage.RU == Model.Language}
                    };
                }
                @Html.DropDownListFor(m => m.Language, languageList, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.NameEn, "", new {@class = "text-danger"})
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-md-3 control-label">@GlobalRes.Email</label>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Email, null, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">@GlobalRes.Site</label>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Url, null, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Url, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">@GlobalRes.Telephone</label>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Telephone, null, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Telephone, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">@GlobalRes.Fax</label>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.FaxNumber, null, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.FaxNumber, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="col-md-offset-3 col-md-9">
            <a href="@Url.Action("Index", "UserContact", null)" class="btn btn-default col-xs-12 col-md-3 square-background-yellow btn-lg">@GlobalRes.Cancel</a>
            <input type="submit" value="@GlobalRes.Save" class="btn btn-default col-xs-12 col-md-3 square-background-blue btn-lg"/>
        </div>
    }
</div>