@using Kapitalist.Web.Resources
@model Kapitalist.Web.Client.ViewModels.Published.CancelTenderViewModel


<div class="container header-and-body-content">
    <h2>@GlobalRes.CancelTender.</h2>

    @using (Html.BeginForm("Cancel", "CancelTender", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.TenderGuid)

        <div class="form-group">
            <label class="col-md-3 control-label">@GlobalRes.CancelTenderDescription:</label>
            <div class="col-md-9">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", style = "resize: vertical;" }) 
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <label class="col-md-3 control-label">@GlobalRes.CancelTenderFileDescription:</label>
            <div class="col-md-9">
                <input type="file" name="@Html.NameFor(m => m.DescriptionUploadFile)" id="@Html.IdFor(m => m.DescriptionUploadFile)" class="btn btn-default"/>
                @Html.ValidationMessageFor(m => m.DescriptionUploadFile, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <a href="@Url.Action("Info", "TenderInfo")" class="btn btn-default col-xs-12 col-md-3 square-background-yellow btn-lg">@GlobalRes.No</a>
                <input type="submit" value="@GlobalRes.Yes" class="btn btn-default col-xs-12 col-md-3 square-background-blue btn-lg" />
            </div>
        </div>
    }
</div>