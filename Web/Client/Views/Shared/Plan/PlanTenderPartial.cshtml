﻿@model Kapitalist.Web.Client.ViewModels.BasePlanViewModel

<div class="form-group">
    <label class="col-md-3 control-label">DeliveryPeriod</label>
    <div class="col-md-9">
        @Html.EditorFor(m => m.Tender.TenderPeriod.StartDate) - @Html.EditorFor(m => m.Tender.TenderPeriod.EndDate)
    </div>
    <div class="col-md-9">
        @Html.ValidationMessageFor(m => m.Tender.TenderPeriod.StartDate, "", new {@class = "text-danger"})
        @Html.ValidationMessageFor(m => m.Tender.TenderPeriod.EndDate, "", new {@class = "text-danger"})
    </div>
</div>

<div class="form-group">
    <label class="col-md-3 control-label">Status</label>
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.Tender.Status, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Tender.Status, "", new {@class = "text-danger"})
    </div>
</div>
<div class="form-group">
    <label class="col-md-3 control-label">ProcurementMethod</label>
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.Tender.ProcurementMethod, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Tender.ProcurementMethod, "", new {@class = "text-danger"})
    </div>
</div>
<div class="form-group">
    <label class="col-md-3 control-label">ProcurementMethodRationale</label>
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.Tender.ProcurementMethodRationale, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Tender.ProcurementMethodRationale, "", new {@class = "text-danger"})
    </div>
</div>
<div class="form-group">
    <label class="col-md-3 control-label">ProcurementMethodType</label>
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.Tender.ProcurementMethodType, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Tender.ProcurementMethodType, "", new {@class = "text-danger"})
    </div>
</div>