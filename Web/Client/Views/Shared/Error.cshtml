@using Kapitalist.Web.Resources
@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = TempData["Title"] ?? GlobalRes.Error;
    ViewBag.NoReturns = true;
}

<div class="container">
    <div class="header-and-body-content">
        <h2 class="text-danger">@ViewBag.Title</h2>
        <br/>
        <div>
            <h3 class="text-danger">
                @(ViewBag.Message ?? GlobalRes.ErrorOccured)
            </h3>
            <p>
                @ViewBag.Description
            </p>
            <br />
        </div>
    </div>
</div>
