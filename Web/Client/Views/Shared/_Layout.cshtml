@using Kapitalist.Web.Resources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="icon" href="@Url.Content("../../Content/images/partner-logo/favicon.ico")" type="image/x-icon">
    <link rel="shortcut icon" href="@Url.Content("../../Content/images/partner-logo/favicon.ico")" type="image/x-icon">

    <title>@(ViewBag.Title == null ? "" : (ViewBag.Title + " - "))@GlobalRes.Title</title>
    @Scripts.Render("~/bundles/modernizr")


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery-ajax")
    @Scripts.Render("~/bundles/jquery-cookie")

    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/kendo-ui")

    @Scripts.Render("~/bundles/culture-helper")

    @Scripts.Render("~/bundles/_layout")

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/font-awesome")
    @Styles.Render("~/Content/kendo-ui")


    @Styles.Render("~/Content/Site")


    <meta name="description" content="E-Kapital"/>

</head>
<body>
<div class="header-and-body-content">
    <nav role="navigation" class="navbar navbar-inverse navbar-fixed-top header-text">
        <div class="navbar-header">
            @Html.ActionLink("E-Kapital", "Index", "Home", null, new {@class = "navbar-brand"})
            <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div id="navbarCollapse" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        <div class="choice-language-circle-inverse">
                            <span class="choice-language-circle-selected-text-inverse">@GlobalRes.LanguageShortName</span>
                        </div>
                    </a>
                    <ul id="languageList" role="menu" class="dropdown-menu">
                        <li>
                            <a onclick="setCookie('_culture', 'uk', 365)">
                                <div class="choice-language-circle-inverse">
                                    <span class="choice-language-circle-text-inverse">UA</span><span class="text-color-white">Українська</span>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a onclick="setCookie('_culture', 'ru', 365)">
                                <div class="choice-language-circle-inverse">
                                    <span class="choice-language-circle-text-inverse">RU</span><span class="text-color-white">Русский</span>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a onclick="setCookie('_culture', 'en', 365)">
                                <div class="choice-language-circle-inverse">
                                    <span class="choice-language-circle-text-inverse">EN</span><span class="text-color-white">English</span>
                                </div>
                            </a>
                        </li>
                    </ul>
                </li>

                <li>
                    @Html.ActionLink(GlobalRes.TradePlatform, "Index", "Tenders")
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a id="currentTime"></a>

                </li>
                <li style="padding-right: 50px">
                    @{ Html.RenderPartial("_LoginPartial"); }
                </li>
            </ul>
        </div>
    </nav>
    @RenderBody()
</div>
<footer class="footer footer-text">
    <div class="container">
        <div class="row">
            <div class="col-sm-3 navbar-bottom">
                <ul class="navbar list-unstyled">
                    <li>
                        <a>@GlobalRes.Customer</a>
                    </li>
                    <li>
                        <a>@GlobalRes.Provider</a>
                    </li>
                    <li>
                        @*<a href="@Url.Action("Index", "DraftTender")">@GlobalRes.Search</a>*@
                    </li>
                </ul>
            </div>
            <div class="col-sm-3 navbar-bottom">
                <ul class="navbar list-unstyled">
                    <li>
                        @*@Html.ActionLink(GlobalRes.About, "About", "Home")*@
                    </li>
                    <li>
                        @*@Html.ActionLink(GlobalRes.Tariff, "Contact", "Home")*@
                    </li>
                </ul>
            </div>
            <div class="col-sm-3 navbar-bottom">
                <ul class="navbar list-unstyled">
                    <li>
                        @Html.ActionLink(GlobalRes.Login, "Login", "Account")
                    </li>
                    <li>
                        @Html.ActionLink(GlobalRes.Registration, "Register", "Account")
                    </li>
                </ul>
            </div>
            <div class="col-sm-3 navbar-bottom">
                <ul class="navbar list-unstyled">
                    <li>@GlobalRes.SupportService :</li>
                    <li>@GlobalRes.SupportServicePhone</li>
                    <li>
                        <a href="#">@GlobalRes.SupportServiceEmail</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</footer>
    
<script src="~/Scripts/custom/kendo-ui-configuration.js">

</script>
@RenderSection("scripts", required: false)
</body>
</html>